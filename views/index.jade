extends layout

block headcontent

	script
		include partials/twitter.js

block content

	.row
		.col-md-4.col-md-push-4.text-center.total
	
			h1.text-center.title 
				img(src='/images/shield.svg')
			.row
				#tweetTotal
				h3 Total Christmas tweets*
			.row.overview
				.col-xs-6
					p#tweetPerSecond
					span tweets per second
				.col-xs-6
					p#neutralTotal
					span neutral tweets
			.row
				#map
				#pano
				h4 Merry Christmas (or not) from
				p#devTeamLogo DevTeam inc
		.col-md-4.col-md-pull-4.text-center.positive
			h2.tweetsHeading 
				img(src='/images/positive_tweets.svg')
			p#positiveTotal
			p.totalSub Ho Ho Ho!
			img.positive(src='/images/thumb.svg')
			ul#positive-tweet.tweet.list-unstyled
				li
					img.loading(src='/images/loading.gif')
		.col-md-4.text-center.negative
			h2.tweetsHeading 
				img(src='/images/negative_tweets.svg')
			p#negativeTotal
			p.totalSub No No No!
			img.negative(src='/images/thumb.svg')
			ul#negative-tweet.tweet.list-unstyled
				li
					img.loading(src='/images/loading.gif')

